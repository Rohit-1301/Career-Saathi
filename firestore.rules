rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and write their own profile data
    match /users/{userId} {
      allow read, write: if request.auth != null 
                         && request.auth.uid == userId;
      // Note: Removed email_verified requirement to allow profile creation
      // You can add it back if you want stricter security after email verification
    }
    
    // Users can read and write their own assessments
    match /assessments/{userId} {
      allow read, write: if request.auth != null 
                         && request.auth.uid == userId;
    }
    
    // Users can read and write their own learning progress
    match /users/{userId}/learning_progress/{progressId} {
      allow read, write: if request.auth != null 
                         && request.auth.uid == userId;
    }
    
    // Public read access for career data (if needed)
    match /career_data/{document=**} {
      allow read: if true;
      allow write: if false; // Only admins can write career data
    }
    
    // Block all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}